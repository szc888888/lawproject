<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.InviteRebateDao">

	<!-- 根据用户ID查询用户邀请返利记录(100条) -->
    <select id="InviteRebateList" resultType="io.renren.entity.InviteRebateEntity" parameterType="map">
		select
			*
		from
		
		tb_invite_rebate where user_id = #{userId} 
		
		order by time desc limit 0,100
    </select>
    
    <!-- 根据用户ID查询用户所有提现成功的金额 -->
    <select id="sumAcquireMoney" resultType="java.math.BigDecimal" parameterType="map">
		select
			sum(acquire_money) acquireMoney
		from
		
		tb_invite_rebate where user_id = #{userId}
    </select>

</mapper>