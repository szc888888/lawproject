<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.CommodityDao">

	<!-- 根据条件查询商品 -->
    <select id="getCommodityList" resultType="io.renren.entity.CommodityEntity" parameterType="map">
        select 
	        id,
			commodity_name,
			commodity_price,
			commodity_spec,
			remark
         from tb_commodity where status = #{status} and type = #{type}
    </select>

</mapper>